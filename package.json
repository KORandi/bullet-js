    "examples:serializer": "node examples/bullet-serializer-example.js",
    "examples:circle-network": "node examples/bullet-circle-network-example.js",
    "examples:bridge-network": "node examples/bullet-bridge-example.js",
    "examples:chain-network": "node examples/bullet-chain-example.js"
